{
  "name": "fenicsx-dev",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "matangover.mypy",
        "ms-vscode.cpptools",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  },
  "remoteUser": "root",
  "postCreateCommand": "ln -sf .cspell/.cspell.json .cspell.json"
}